          >
          <a
            class="btn btn-success"
            href="{{ path('app_matter_edit', { id: matter.id }) }}"
            >edit</a
          >
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="3">no records found</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="btn btn-success" href="{{ path('app_matter_new') }}">Create new</a>
</div>

{% endblock %}
